<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/entry_background"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp" >

        <TextView
            android:id="@+id/lblLineTitle"
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_weight="1.17"
            android:background="@drawable/list_detail"
            android:text="Line Entry"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblLineMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/lblLineTitle"
            android:background="@drawable/edit_border"
            android:text="New"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblLineCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="Code"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtLineCode"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_border"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblLineName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="Line"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtLineName"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_border"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/IsActiveLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@xml/custom_checkbox"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/lblLineActiveStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:text="Is Active"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLineSave"
            style="@android:style/TextAppearance.Small"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:background="@drawable/action_button"
            android:text="Save" />

        <Button
            android:id="@+id/btnLineBack"
            style="@android:style/TextAppearance.Small"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@drawable/action_button"
            android:paddingLeft="4dp"
            android:text="Back" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/AndroidProjects/brief/app/src/main/res/layout/line_master.xml -->