<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#000000" />
      <stroke
          android:width="1dp"
          android:color="#000000" />
      <corners
          android:radius="1dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#000000"
          android:centerColor="#FFFF00"
          android:endColor="#EBE88D"
          />
      <stroke
          android:width="0dp"
          android:color="#DBA901" />
      <corners
          android:radius="1dp" 
          />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>