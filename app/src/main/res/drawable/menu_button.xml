<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FFFF00" />
      <stroke
          android:width="1dp"
          android:color="#FFFF00" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#FACC2E"
          android:centerColor="#FFFF00"
          android:endColor="#EBE88D"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#DBA901" />
      <corners
          android:radius="6dp" 
          />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>